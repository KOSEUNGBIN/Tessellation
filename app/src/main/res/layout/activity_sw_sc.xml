<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="540dp"
    android:layout_height="360dp"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:id="@+id/test">

    <GridView
        android:layout_centerInParent="true"
        android:id="@+id/gridView2"
        android:layout_width="315dp"
        android:layout_height="315dp"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:scaleType="fitXY"
        android:padding="0dp">

    </GridView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:src="@drawable/background2"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:paddingLeft="15dp"
        android:src="@drawable/main_exit"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:paddingRight="15dp"
        android:src="@drawable/main_done"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:src="@drawable/main_clear"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/main_menu_body"
        />

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="7dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        >
        <ImageView
            android:layout_width="45dp"
            android:layout_height="31dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.5"
            android:src="@drawable/main_zigzag"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="31dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.5"
            android:src="@drawable/main_size_change"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="31dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.5"
            android:src="@drawable/main_90_degree"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="31dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.5"
            android:src="@drawable/main_cross"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="31dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.5"
            android:src="@drawable/main_45_degree"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="31dp"
            android:src="@drawable/main_save"/>

        <View
            android:layout_width="25dp"
            android:layout_height="10dp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:layout_marginLeft="13dp"
            android:src="@drawable/main_upward"/>

    </LinearLayout>

</RelativeLayout>