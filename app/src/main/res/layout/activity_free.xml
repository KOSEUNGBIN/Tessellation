<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_free_co"
        android:orientation="vertical">

        <GridView
            android:id="@+id/gridView"
            android:layout_width="800dp"
            android:layout_height="800dp"
            android:layout_centerInParent="true"
            android:horizontalSpacing="0dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:verticalSpacing="0dp">

        </GridView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/background_free" />


        <ImageView
            android:id="@+id/free_exit"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:src="@drawable/main_exit" />

        <ImageView
            android:id="@+id/free_done"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="50dp"
            android:src="@drawable/free_complete_btn" />

        <ImageView
            android:id="@+id/free_clear"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="33dp"
            android:layout_marginTop="33dp"
            android:src="@drawable/free_back_btn" />


        <include
            android:id="@+id/free_menu_include_top"
            layout="@layout/free_top_menu" />

        <include
            android:id="@+id/free_menu_include_figure"
            layout="@layout/free_figure_menu" />

        <include
            android:id="@+id/free_menu_include_paints"
            layout="@layout/free_paints_menu" />

        <include
            android:id="@+id/free_menu_include_size"
            layout="@layout/free_size_menu" />

        <include
            android:id="@+id/free_menu_include_moving"
            layout="@layout/free_moving_menu" />

    </RelativeLayout>
</LinearLayout>